def add_expense(expenses):

    try:
        
        category = input("Enter category: ")
        
        item = input("Enter item name: ")
        
        amount = float(input("Enter amount: $"))
        
        date = input("Enter date (YYYY-MM-DD): ")

        expense = {
            
            "category": category,
            
            "item": item,
           
            "amount": amount,
            
            "date": date
       
        }

        expenses.append(expense)
        
        print("Expense added successfully ‚úÖ")

    except ValueError:
    
       print("Invalid amount. Please enter a number.")

def view_expenses(expenses):

#Displays all expenses in a clear, organized format.

    if not expenses:
        print("No expenses recorded.")
        return

    print("All Expenses:")
    
    for i, expense in enumerate(expenses, start=1):
       
        print(f"Expense {i}:")
        
        for key, value in expense.items():
            
            if key == "amount":
               
                print(f"  {key.capitalize()}: ${value:.2f}")
            else:
              
                print(f"  {key.capitalize()}: {value}")


def calculate_total(expenses):

#Calculates and displays total expenses.

    if not expenses:
       
        print("No expenses to calculate.")
        
        return

    total = 0
   
    for expense in expenses:
        
        total += expense["amount"]

    print(f"Total expenses: ${total:.2f}")


def filter_by_category(expenses):

#Filters expenses by category.

    category = input("Enter category to filter by: ")
    
    found = False

    for expense in expenses:
        if expense["category"].lower() == category.lower():
            print(
               
                f"{expense['date']} | "
              
                f"{expense['category']} | "
              
                f"{expense['item']} | "
              
                f"${expense['amount']:.2f}"
            )
            found = True

    if not found:
        print("No expenses found for this category.")


def delete_expense(expenses):

#Deletes an expense by category, item, and date.

    if not expenses:
        
        print("No expenses to delete.")
        
        return

    category = input("Enter category: ")
   
    item = input("Enter item name: ")
    
    date = input("Enter date (YYYY-MM-DD): ")

    for expense in expenses:
        if (
            
            expense["category"].lower() == category.lower()
           
            and expense["item"].lower() == item.lower()
           
            and expense["date"] == date
     
        ):
            
            expenses.remove(expense)
          
            print("Expense deleted successfully üóëÔ∏è")
           
            return

    print("No matching expense found.")


def main():

#Main menu loop for the Expense Tracker.

    expenses = []

    while True:
       
        print("Expense Tracker Menu")
      
        print("1. Add Expense")
      
        print("2. View All Expenses")
      
        print("3. Filter Expenses by Category")
      
        print("4. Calculate Total Expenses")
       
        print("5. Delete Expense")
    
        print("6. Exit üö®")

        choice = input("Choose an option: ")

        if choice == "1":
            add_expense(expenses)
        
        elif choice == "2":
           view_expenses(expenses)
       
        elif choice == "3":
            filter_by_category(expenses)
       
        elif choice == "4":
            calculate_total(expenses)
      
        elif choice == "5":
            delete_expense(expenses)
      
        elif choice == "6":
            print("Goodbye üëã")
           
            break
      
        else:
           
            print("Invalid option. Please try again.")


main()
