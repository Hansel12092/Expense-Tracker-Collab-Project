def main():
    expenses = {
        "food and beverage": []
    }

    while True:
        print("\nMenu:")
        print("1. Add expense")
        print("2. View expenses")
        print("3. Remove expense")
        print("4. Calculate total expenses")
        print("5. Exit ðŸš¨")

        user_choice = input("Choose an option: ")

        # ADD EXPENSE
        if user_choice == "1":
            try:
                category = ("Category: ")
                item = input("Food item: ")
                cost = float(input("Cost: $"))

                expenses["food and beverage"].append({
                    "Category:": category,
                    "item": item,
                    "amount": cost
                })

                print("Expense added successfully!")

            except ValueError:
                print("Invalid cost. Please enter a number.")

        # VIEW EXPENSES
        elif user_choice == "2":
            if not expenses["food and beverage"]:
                print("No expenses added yet.")
            else:
                print("\nYour food & beverage expenses:")
                for i, expense in enumerate(expenses["food and beverage"], start=1):
                    print(f"{i}. {expense['item']} - ${expense['amount']:.2f}")

        # REMOVE EXPENSE
        elif user_choice == "3":
            if not expenses["food and beverage"]:
                print("No expenses to remove.")
                continue

            for i, expense in enumerate(expenses["food and beverage"], start=1):
                print(f"{i}. {expense['item']} - ${expense['amount']:.2f}")

            try:
                to_remove = int(input("Enter expense number to delete: "))
                expenses["food and beverage"].pop(to_remove - 1)
                print("Expense removed ðŸŽ¯")

            except (ValueError, IndexError):
                print("Invalid selection.")

        # CALCULATE TOTAL EXPENSES        
        elif user_choice == "4":
            if not expenses["food and beverage"]:
                print("No expenses to calculate.")
            else:
                total = 0
                for expense in expenses["food and beverage"]:
                    total += expense["amount"]

                print(f"Total spent on food & beverages: ${total:.2f}")
        # EXIT
        elif user_choice == "5":
            print("Goodbye ðŸ‘‹")
            break

        else:
            print("Invalid option, please try again.")


main()
