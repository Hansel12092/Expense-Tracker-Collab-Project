from datetime import date

def main():

    expenses = []  
    while True:
        
        print("Menu:")
        
        print("1. Food and beverages")
        
        print("2. Check expenses")
        
        print("3. remove expenses")
        
        print("4. Exit üö®")

        user_choice = input("Choose an option: ")


        

        if user_choice == "1":
           
            print("Enter food and beverages: ")
            
            food = input("Food: ")
            
            cost = input("cost: ")
            

            expenses.append((food, cost))
           
            expenses.sort(key=lambda x: x[0])

            print("Expense added and sorted!")

        elif user_choice == "2":
            
            if not expenses:
               
                print("No expenses added yet.")
            
            else:
                
                print("Your expenses:")
                
                for i, (r_date, r_text) in enumerate(expenses, start=1):
                    
                    print(f"{i}. {r_date}  -  {r_text}")

        elif user_choice == "3":
           
            if not expenses:
                
                print("No expenses to remove. ‡≠ß(‡πë‚Ä¢ÃÄ„ÉÆ‚Ä¢ÃÅ)‡´≠ LET'S GO!")
                
                continue

            print("Your expenses:")
            
            for i, (r_date, r_text) in enumerate(expenses, start=1):
                
                print(f"{i}. {r_date}  -  {r_text}")

            try:
               
                to_remove = int(input("Enter reminder number to delete: "))
                
                expenses.pop(to_remove - 1)
                
                print("expnese removed üéØ")
            
            except (ValueError, IndexError):
                
                print("Invalid selection.")


        elif user_choice == "4":
          
            print("good bye")
            
            break

        else:
          
            print("Invalid option, please try again. :(")



expenses = {
   "food and beverage": [],
   "transportation": [],
   "entertainment": []
}


item_name = input("Enter the food item name: ")
amount = float(input("Enter the cost: "))


expenses["food and beverage"].append({
   "item": item_name,
   "amount": amount
})

print(expenses)
